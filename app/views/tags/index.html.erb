<%= javascript_include_tag "searchbox.js" %>

<%- model_class = Tag -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize %></h1>
</div>

  <div class="control-group">
      <div class="controls">
          Search: <%= text_field_tag :title,"", :class => 'search-c' %>
          <div class="new-top">
              <%= link_to "New", new_tag_path, :class => 'btn btn-primary custom-new-button' %>
          </div>
      </div>
  </div>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Sr.No</th>
      <th><%= model_class.human_attribute_name(:name) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody id="search-data">
  <% render :partial => 'shared/i_calculation' %>
    <% @tags.each do |tag| %>
      <tr>
        <td><%= link_to @i = @i+1, tag_path(tag) %></td>
        <td><%= tag.name %></td>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_tag_path(tag), :class => 'btn btn-mini' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      tag_path(tag),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-mini btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<script type="text/javascript">
    $(document).ready(function(){

            $('.search-c').searchbox({
url: '/tag_search.html',
param: 'q',
dom_id: '#search-data',
delay: 100,
});
})
</script>
