<% @i = 0 %>
<% @tags.each do |tag| %>
    <tr>
        <td><%= @i = @i+1 %></td>
        <td><%= tag.name%></td>

        <td>
            <%= link_to "Edit" , edit_tag_path(tag), :class => 'btn btn-mini' %>
            <%= link_to "Destroy", contact_path(tag), :method => :delete,
                :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                :class => 'btn btn-mini btn-danger' %>
            </td>
        </tr>
    <% end %>

