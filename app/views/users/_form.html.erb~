<%= form_for @user, :html => { :class => 'form-horizontal' } do |f| %>
    <div class="control-group">
        <%= f.label :first_name, :class => 'control-label' %>
        <div class="controls">
            <%= f.text_field :first_name, :class => 'text_field' %>
        </div>
    </div>
    <div class="control-group">
        <%= f.label :last_name, :class => 'control-label' %>
        <div class="controls">
            <%= f.text_field :last_name, :class => 'text_field' %>
        </div>
    </div>
    <div class="control-group">
        <%= f.label :address, :class => 'control-label' %>
        <div class="controls">
            <%= f.text_field :address, :class => 'text_field' %>
        </div>
    </div>
    <div class="control-group">
        <%= f.label :mobile_no, :class => 'control-label' %>
        <div class="controls">
            <%= f.text_field :mobile_no, :class => 'text_field' %>
        </div>
    </div>
    <div class="control-group">
        <%= f.label :email, :class => 'control-label' %>
        <div class="controls">
            <%= f.email_field :email, :class => 'text_field' %>
        </div>
    </div>

    <div class="control-group">
        <%= f.label :password, :class => 'control-label' %>
        <div class="controls">
            <%= f.password_field :password, :class => 'text_field' %>
        </div>
    </div>

    <div class="control-group">
        <%= f.label :password_confirmation, :class => 'control-label' %>
        <div class="controls">
            <%= f.password_field :password_confirmation, :class => 'text_field' %>
        </div>
    </div>

    <div class="control-group">
        <%= f.label :account_type, :class => 'control-label' %>
        <div class="controls">
            <%= f.select :account_type, [["admin", 1], ["team_leader", 2], ["sales_executive", 3]], { :include_blank => true }, :class => 'account_type'  %>
        </div>
    </div>

    <div class="control-group hide">
        <%= f.label :team_leader, :class => 'control-label' %>
        <div class="controls">
            <%= f.select :team_leader, options_for_select(@all_team_leaders.map{|d| ["#{d.user.first_name} #{d.user.last_name}", d.id]}), { :include_blank => true }, :class => 'text_field' %>
        </div>
    </div>


    <div class="form-actions">
        <%= f.submit nil, :class => 'btn btn-primary' %>
        <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
            users_path, :class => 'btn' %>
        </div>
    <% end %>

    <script>
        $('.hide').fade('hide').removeClass('hide');

        $('.account_type').change(function() {
            if ($('.account_type').val() == 2)
            {
                $('.hide').fadeIn('hide');
                alert('2');
            }
        });
    </script>
