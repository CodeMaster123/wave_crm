<%- model_class = Account -%>
<div class="page-header">
    <h1><%=t '.title', :default => model_class.model_name.human.pluralize %></h1>
</div>
<table class="table table-striped">
    <thead>
        <tr>
            <th>Id</th>
            <th>Account_owner</th>
            <th>Account name</th>
            <th>Phone number</th>
            <th>Website</th>
            <th>Ownership Type</th>
            <th><%=t '.actions', :default => t("helpers.actions") %></th>
        </tr>
    </thead>
    <tbody>
        <% unless @accounts.nil? %>
            <% @accounts.each do |account| %>
                <tr>
                    <td><%= link_to account.id, account_path(account) %></td>
                    <td><%= account.account_owner %></td>
                    <td><%= account.account_name %></td>
                    <td><%= account.phone_number %></td>
                    <td><%= account.website %></td>
                    <td><%= account.ownership_type %></td>
                    <td>
                        <%= link_to t('.edit', :default => t("helpers.links.edit")), edit_account_path(account), :class => 'btn btn-mini' %>
                        <%= link_to t('.destroy', :default => t("helpers.links.destroy")), account_path(account), :method => :delete, :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-mini btn-danger' %>
                    </td>
                </tr>
            <% end %>
        <% end %>
    </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
    new_account_path,
    :class => 'btn btn-primary' %>
