<%= form_for @account, :html => { :class => 'form-horizontal' } do |f| %>

    <div class="control-group">
      <%= f.label :account_owner, :class => 'control-label' %>
      <div class="controls">
        <%= f.select :account_owner, @account_owner.map{|ao|[ao.full_name, ao.id]}, :class => 'contacts_text_field' %>
      </div>
    </div>

    <div class="control-group">
      <%= f.label :ownership_type, :class => 'control-label' %>
      <div class="controls">
        <%= f.select :ownership_type, options_for_select([["Proprietership","proprietership"],["Private", "Private"], ["Public", "Public"]]), :class => 'text_field' %>
      </div>
    </div>

    <div class="control-group">
      <%= f.label :account_name, :class => 'control-label' %>
      <div class="controls">
        <%= f.text_field :account_name,  :class => 'text_field' %>
      </div>
    </div>

    <div class="control-group">
      <%= f.label :number_of_employees, :class => 'control-label' %>
      <div class="controls">
        <%= f.text_field :number_of_employees,  :class => 'number_field' %>
      </div>
    </div>

    <div class="control-group">
      <%= f.label :phone_number, :class => 'control-label' %>
      <div class="controls">
        <%= f.text_field :phone_number,  :class => 'number_field' %>
      </div>
    </div>

    <div class="control-group">
      <%= f.label :website, :class => 'control-label' %>
      <div class="controls">
        <%= f.text_field :website,  :class => 'text_field' %>
      </div>
    </div>

    <div class="control-group">
      <%= f.label :billing_address, :class => 'control-label' %>
      <div class="controls">
        <%= f.text_field :billing_address, :rows => 3,  :class => 'text_field' %>
      </div>
    </div>

    <div class="control-group">
      <%= f.label :shipping_address, :class => 'control-label' %>
      <div class="controls">
        <%= f.text_area :shipping_address, :rows => 3, :class => 'text_field' %>
      </div>
    </div>

    <div class="form-actions">
        <%= f.submit nil, :class => 'btn btn-primary' %>
        <%= link_to t('.cancel', :default => t("helpers.links.cancel")), accounts_path, :class => 'btn' %>
    </div>

<% end %>
