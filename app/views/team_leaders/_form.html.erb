<%= form_for @team_leader, :html => { :class => 'form-horizontal' } do |f| %>
  <div class="control-group">
    <%= f.label :employee_id, :class => 'control-label' %>
    <div class="controls">
      <%= f.number_field :employee_id, :class => 'number_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :lead_id, :class => 'control-label' %>
    <div class="controls">
      <%= f.number_field :lead_id, :class => 'number_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :sales_executive_id, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :sales_executive_id, :class => 'text_field' %>
    </div>
  </div>

  <div class="form-actions">
    <%= f.submit nil, :class => 'btn btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                team_leaders_path, :class => 'btn' %>
  </div>
<% end %>
