<%- model_class = TeamLeader -%>
<div class="page-header">
   <h3>Target Forecast</h3>
</div>
        <%= javascript_include_tag "jquery-1.9.1.min", "highcharts.js" %>


<script type="text/javascript" charset="utf-8">
    $(function () {
        new Highcharts.Chart({
            chart: { renderTo: 'team_leaders_chart', type: 'spline' },
            title: {
                text: 'Team Target',
                x: -20 //center
            },
            subtitle: {
                text: 'with its sales executives',
                x: -20
            },
            xAxis: {
                categories: ['Jan', 'Feb', 'Mar', 'Apr', 'May', 'Jun',
                    'Jul', 'Aug', 'Sep', 'Oct', 'Nov', 'Dec']
            },
            yAxis: {
                title: {
                    text: 'Target (Rupees)'
                },
                labels: {
                    formatter: function() {
                        return this.value +'Rs'
                    }
                },

                plotLines: [{
                    value: 0,
                    width: 1,
                    color: '#808080'
                }]
            },

            legend: {
                layout: 'vertical',
                align: 'right',
                verticalAlign: 'top',
                x: 0,
                y: 0,
                borderWidth: 0
            },
            plotOptions: {
                spline: {
                    marker: {
                        radius: 4,
                        lineColor: '#666666',
                        lineWidth: 1
                    }
                }
            },
            series: [{
                name: '<%= @all_team_leader.user.first_name %>',
                data: [3.9, 4.2, 5.7, 8.5, 11.9, 15.8, 18.0, 16.6, 14.2, 10.3, 6.6, 4.8]
            }, {
                name: '<%= @all_team_leader.sales_executives.first.user.first_name %>',
                data: [-0.2, 0.8, 5.7, 11.3, 17.0, 22.0, 24.8, 24.1, 20.1, 14.1, 8.6, 2.5]
            }, {
                name: '<%= @all_team_leader.sales_executives.last.user.first_name %>',
                data: [-0.9, 0.6, 3.5, 8.4, 13.5, 17.0, 18.6, 17.9, 14.3, 9.0, 3.9, 1.0]
            }, {
                name: 'Vivek Varade',
                data: [3.9, 4.2, 5.7, 8.5, 11.9, 15.2, 17.0, 16.6, 14.2, 10.3, 6.6, 4.8]
            }]
        });
    });
</script>

<div id="team_leaders_chart" style="width: 1000px; height: 450px;"></div>
