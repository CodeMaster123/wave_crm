<%- model_class = TeamLeader -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th>Sr.No</th>

      <th>Teamleader's name</th>
      <th>Mobile no</th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
  <% render :partial => 'shared/i_calculation' %>
    <% @team_leaders.each do |team_leader| %>
      <tr>
        <td><%= @i = @i+1 %></td>

        <td><%= "#{team_leader.user.first_name} #{team_leader.user.last_name}"  %></td>
        <td><%= team_leader.user.mobile_no %></td>
        <td>

          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      team_leader_path(team_leader),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-mini btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

