<%- model_class = TeamLeader -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:employee_id) %></th>
      <th><%= model_class.human_attribute_name(:lead_id) %></th>
      <th><%= model_class.human_attribute_name(:sales_executive_id) %></th>
      <th><%= model_class.human_attribute_name(:created_at) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @team_leaders.each do |team_leader| %>
      <tr>
        <td><%= link_to team_leader.id, team_leader_path(team_leader) %></td>
        <td><%= team_leader.employee_id %></td>
        <td><%= team_leader.lead_id %></td>
        <td><%= team_leader.sales_executive_id %></td>
        <td><%=l team_leader.created_at %></td>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_team_leader_path(team_leader), :class => 'btn btn-mini' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      team_leader_path(team_leader),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-mini btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_team_leader_path,
            :class => 'btn btn-primary' %>
