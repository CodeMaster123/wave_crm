<%= form_for @transaction_field, :html => { :class => 'form-horizontal' } do |f| %>
    <div class="control-group">
        <%= f.label :field_name, :class => 'control-label' %>
        <div class="controls">
            <%= f.text_field :field_name, :class => 'text_field' %>
        </div>
    </div>
    <div class="control-group">
        <%= f.label :user_id, :class => 'control-label' %>
        <div class="controls">
            <%= f.select :user_id, options_for_select(@users.map{|c|[c.full_name, c.id]}), :class => 'contacts_text_field' %>
        </div>
    </div>

    <div class="form-actions">
        <%= f.submit nil, :class => 'btn btn-primary' %>
        <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
            transaction_fields_path, :class => 'btn' %>
        </div>
    <% end %>
