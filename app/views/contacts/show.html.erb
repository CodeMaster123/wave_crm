<%- model_class = Contact -%>
<div class="page-header">
    <h1><%=t '.title', :default => model_class.model_name.human %></h1>
</div>

<div style="display: inline;" >
    <dl class="dl-horizontal">
        <dt><strong>Name: </strong></dt>
        <dd><%= @contact.full_name %></dd>

        <dt><strong>Address: </strong></dt>
        <dd><%= @contact.address %></dd>
        <dt><strong>Mobile Number: </strong></dt>
        <dd><%= @contact.mobile_no %></dd>
        <dt><strong>Landline Number: </strong></dt>
        <dd><%= @contact.landline_no %></dd>
    </dl>
</div>

<% unless @contact.account.nil? %>
    <div class="contact-accounts">
        <dl class="dl-horizontal">
            <dt><strong>Account: </strong></dt>
            <dd><%= @contact.account.account_name %></dd>
            <dt><strong>Account owner: </strong></dt>
            <dd><%= @contact.account.account_owner %></dd>
            <dt><strong>Phone number: </strong></dt>
            <dd><%= @contact.account.phone_number %></dd>
            <dt><strong>Website: </strong></dt>
            <dd><%= @contact.account.website %></dd>
            <dt><strong>Ownership type: </strong></dt>
            <dd><%= @contact.account.ownership_type %></dd>
            <dt><strong>Billing address: </strong></dt>
            <dd><%= @contact.account.billing_address %></dd>
            <dt><strong>Shipping address: </strong></dt>
            <dd><%= @contact.account.shipping_address %></dd>
        </dl>
    </div>
<% end %>

<div style="display: inline;" >
    <div class="form-actions">
        <%= link_to t('.back', :default => t("helpers.links.back")), contacts_path, :class => 'btn'  %>
        <%= link_to t('.edit', :default => t("helpers.links.edit")), edit_contact_path(@contact), :class => 'btn' %>
        <%= link_to t('.destroy', :default => t("helpers.links.destroy")), contact_path(@contact), :method => 'delete', :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-danger' %>
    </div>
</div>
