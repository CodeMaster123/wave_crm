<%- model_class = Contact -%>
<div class="page-header">
    <h1><%=t '.title', :default => model_class.model_name.human.pluralize %></h1>
</div>
<div class="control-group">
    <div class="controls">
        Search: <%= text_field_tag :title,"", :class => 'search-c' %>
    </div>
</div>
<table class="table table-striped">
    <thead>
        <tr>
            <th>Sr.No</th>
            <th>Contact Name</th>
            <th>Address</th>
            <th>Mobile Number</th>
            <th>Phone Number</th>
            <th><%=t '.actions', :default => t("helpers.actions") %></th>
        </tr>
    </thead>
    <tbody id ="search-data">
        <% @contacts.each_with_index do |contact, i| %>
            <tr>
                <td><%= link_to i, contact_path(contact) %></td>
                <td><%= contact.full_name %></td>
                <td><%= contact.address %></td>
                <td><%= contact.mobile_no %></td>
                <td><%= contact.landline_no %></td>
                <td>
                    <%= link_to t('.edit', :default => t("helpers.links.edit")), edit_contact_path(contact), :class => 'btn btn-mini' %>
                    <%= link_to t('.destroy', :default => t("helpers.links.destroy")), contact_path(contact), :method => :delete, :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-mini btn-danger' %>
                </td>
            </tr>
        <% end %>
    </tbody>
</table>
