<%= form_for @company, :html => { :class => 'form-horizontal' } do |f| %>
  <div class="control-group">
    <%= f.label :company_name, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :company_name, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :company_address, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :company_address, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :contact_number1, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :contact_number1, :class => 'number_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :contact_number2, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :contact_number2, :class => 'number_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :admin_id, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :admin_id, :class => 'number_field' %>
    </div>
  </div>

  <div class="form-actions">
    <%= f.submit nil, :class => 'btn btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                companies_path, :class => 'btn' %>
  </div>
<% end %>
