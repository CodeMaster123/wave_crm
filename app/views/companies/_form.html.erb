<%= bootstrap_form_for @company, :html => { :class => 'form-horizontal' } do |f| %>
            <%= f.text_field :company_name, :class => 'text_field' %>
            <%= f.text_field :company_address, :class => 'text_field' %>
            <%= f.text_field :contact_number1, :class => 'number_field' %>
            <%= f.text_field :contact_number2, :class => 'number_field' %>
            <%= f.text_field :admin_id, :class => 'number_field' %>

    <div class="form-actions">
        <%= f.submit nil, :class => 'btn btn-primary' %>
        <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
            companies_path, :class => 'btn' %>
        </div>
    <% end %>
