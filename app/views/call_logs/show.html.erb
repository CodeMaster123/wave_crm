<%- model_class = CallLog -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:call_result) %>:</strong></dt>
  <dd><%= @call_log.call_result %></dd>
  <dt><strong><%= model_class.human_attribute_name(:subject) %>:</strong></dt>
  <dd><%= @call_log.subject %></dd>
  <dt><strong><%= model_class.human_attribute_name(:call_type) %>:</strong></dt>
  <dd><%= @call_log.call_type %></dd>
  <dt><strong><%= model_class.human_attribute_name(:call_purpose) %>:</strong></dt>
  <dd><%= @call_log.call_purpose %></dd>
  <dt><strong><%= model_class.human_attribute_name(:call_start_time) %>:</strong></dt>
  <dd><%= @call_log.call_start_time %></dd>
  <dt><strong><%= model_class.human_attribute_name(:call_duration) %>:</strong></dt>
  <dd><%= @call_log.call_duration %></dd>
  <dt><strong><%= model_class.human_attribute_name(:call_owner_id) %>:</strong></dt>
  <dd><%= @call_log.call_owner_id %></dd>
</dl>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              call_logs_path, :class => 'btn'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_call_log_path(@call_log), :class => 'btn' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              call_log_path(@call_log),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>
