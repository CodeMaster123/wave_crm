<%= form_for [@product, @inventory_addition], :html => { :class => 'form-horizontal' } do |f| %>
  <%= f.hidden_field :product_id, :value => @product.id %>
    Addition Date <%= f.text_field :addition_date, :class => 'datetime_select' %>
    Quantity <%= f.text_field :quantity, :class => 'number_field' %>

    <div class="form-actions">
        <%= f.submit nil, :class => 'btn btn-primary' %>
    </div>
<% end %>
