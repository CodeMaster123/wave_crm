<%- model_class = CrmCustomer -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:first_name) %>:</strong></dt>
  <dd><%= @crm_customer.first_name %></dd>
  <dt><strong><%= model_class.human_attribute_name(:middle_name) %>:</strong></dt>
  <dd><%= @crm_customer.middle_name %></dd>
  <dt><strong><%= model_class.human_attribute_name(:last_name) %>:</strong></dt>
  <dd><%= @crm_customer.last_name %></dd>
  <dt><strong><%= model_class.human_attribute_name(:address) %>:</strong></dt>
  <dd><%= @crm_customer.address %></dd>
  <dt><strong><%= model_class.human_attribute_name(:amount_paid) %>:</strong></dt>
  <dd><%= @crm_customer.amount_paid %></dd>
  <dt><strong><%= model_class.human_attribute_name(:subscription_start) %>:</strong></dt>
  <dd><%= @crm_customer.subscription_start %></dd>
  <dt><strong><%= model_class.human_attribute_name(:subscription_ends) %>:</strong></dt>
  <dd><%= @crm_customer.subscription_ends %></dd>
</dl>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              crm_customers_path, :class => 'btn'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_crm_customer_path(@crm_customer), :class => 'btn' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              crm_customer_path(@crm_customer),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>
