<%= bootstrap_form_for @event, :html => { :class => 'form-horizontal' } do |f| %>
    <%= f.text_field :title, :class => 'text_field' %>
    <%= f.text_field :starts_at, :class => 'datetime_select' %>
    <%= f.text_area :description, :rows => "4", :class => 'text_area' %>


    <div class="form-actions">
        <%= f.submit nil, :class => 'btn btn-primary' %>
        <%= link_to t('.cancel', :default => t("helpers.links.cancel")), events_path, :class => 'btn' %>
    </div>
<% end %>
