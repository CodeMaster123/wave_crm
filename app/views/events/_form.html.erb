<%= form_for @event, :html => { :class => 'form-horizontal' } do |f| %>
    Title<%= f.text_field :title, :class => 'text_field' %>
    Starts at <%= f.text_field :starts_at, :class => 'datetime_select' %>
    Description <%= f.text_area :description, :rows => "4", :class => 'text_area' %>

    <div class="form-actions">
        <%= f.submit "Update", :class => 'btn btn-primary' %>
        <%= link_to t('.cancel', :default => t("helpers.links.cancel")), events_path, :class => 'btn' %>
    </div>
<% end %>
