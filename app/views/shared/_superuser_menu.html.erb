            <% permitted_to? :index, :sales_executives do %>
                <li><%= link_to "Sales Executive", :sales_executives  %></li>
                <li class="dropdown-submenu">
                <a href="#" data-toggle="dropdown" class='dropdown-toggle'>
                    <span>Targets</span>
                </a>
                <ul class="dropdown-menu mod-dropdown1">
                    <li><%= link_to "Target's list", :targets %></li>
