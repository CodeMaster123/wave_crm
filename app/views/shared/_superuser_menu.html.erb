                    <li><%= link_to "#{team_leader.user.first_name} #{team_leader.user.last_name}", {:controller => "leads", :action => "index", :team_leader => team_leader.id} %></li>
                <% end %>
            </ul>
            </li>

            <li><%= link_to "Sales Executives", :sales_executives  %></li>
            <li class="dropdown-submenu">
            <a href="#" data-toggle="dropdown" class='dropdown-toggle'>
                <span>Targets</span>
            </a>
            <ul class="dropdown-menu mod-dropdown1">
                <li><%= link_to "Target's list", :targets %></li>
                <li><%= link_to "Assign new target", :new_target %></li>
            </ul>
