<% if (controller_name == "team_leaders" || controller_name == "sales_executives") && action_name != "target_forecast" %>
    <% permitted_to? :index, :team_leaders do %>
        <li class="active" >
        <a href="#" data-toggle="dropdown" class='dropdown-toggle'> Team <span class="caret"></span> </a>
        <ul class="dropdown-menu">
            <li> <%= link_to "Team Leaders", :team_leaders  %> </li>
            <li class="dropdown-submenu">
            <a href="#" data-toggle="dropdown" class='dropdown-toggle'> Team </a>
            <ul class="dropdown-menu d2">
                <% @company = Company.where(:id => current_user.company_id).first %>
                <% @team_leaders = @company.team_leaders.all.each do |team_leader| %>
                    <li><%= link_to "#{team_leader.user.first_name} #{team_leader.user.last_name}", {:controller => "leads", :action => "index", :team_leader => team_leader.id} %></li>
                <% end %>
            </ul>
            </li>

            <% permitted_to? :index, :sales_executives do %>
                <li><%= link_to "Sales Executives", :sales_executives  %></li>
                <li class="dropdown-submenu">
                <a href="#" data-toggle="dropdown" class='dropdown-toggle'> <span>Targets</span> </a>
                <ul class="dropdown-menu d2">
                    <li><%= link_to "Target's list", :targets %></li>
                    <li><%= link_to "Assign new target", :new_target %></li>
                </ul>
                </li>
            <% end %>
        </ul>
        </li>
    <% end %>
<% elsif %>
