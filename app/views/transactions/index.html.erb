<%- model_class = Transaction -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize %></h1>
</div>

<div class="control-group">
    <div class="controls">
        Search: <%= text_field_tag :title,"", :class => 'search-c' %>
        <div class="new-top">
            <%= link_to "New", new_transaction_path, :class => 'btn btn-primary custom-new-button' %>
        </div>
    </div>
</div>

<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:contact_id) %></th>
      <th><%= model_class.human_attribute_name(:amount) %></th>
      <th><%= model_class.human_attribute_name(:transaction_time) %></th>
      <th><%= model_class.human_attribute_name(:created_at) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @transactions.each do |transaction| %>
      <tr>
        <td><%= link_to transaction.id, transaction_path(transaction) %></td>
        <td><%= transaction.contact_id %></td>
        <td><%= transaction.amount %></td>
        <td><%= transaction.transaction_time %></td>
        <td><%=l transaction.created_at %></td>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_transaction_path(transaction), :class => 'btn btn-mini' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      transaction_path(transaction),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-mini btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<script type="text/javascript">
    $(document).ready(function(){
            $('.tTip').betterTooltip({speed: 150, delay: 300});
            });

$('.search-c').searchbox({
url: '/lead_search.html',
param: 'q',
dom_id: '#search-data',
delay: 100,
})
</script>
