<%- model_class = Transaction -%>
<div class="page-header">
    <h1><%=t '.title', :default => model_class.model_name.human.pluralize %></h1>
</div>

<div class="control-group">
    <div class="controls">
        Search: <%= text_field_tag :title,"", :class => 'search-c' %>
        <div class="new-top">
            <%= link_to "New", new_transaction_path, :class => 'btn btn-primary custom-new-button' %>
        </div>
    </div>
</div>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Sr.No</th>
            <th>Contact</th>
            <th>Amount</th>
            <th>Amount Paid</th>
            <th>Transaction time</th>
            <% @i = 0 %>
            <% @transaction_fields.each do |tf| %>
                <th><%= tf.field_name %></th>
            <% end %>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        <% render :partial => 'shared/i_calculation' %>
        <% @transactions.each do |transaction| %>
            <tr>
                <td><%= link_to @i = @i+1, transaction_path(transaction) %></td>
                <% if current_user.company.crm_customer.customer_type == 'B2C' %>
                    <% unless Contact.where(:id => transaction.contact_id).empty? %>
                        <td><%= transaction.full_name %> </td>
                    <% else %>
                        <td></td>
                    <% end %>
                <% else %>
                        <td><%= transaction.account.contacts.first.full_name %> </td>
                <% end %>
                <td><%= transaction.amount %></td>
                <% @paid_amount = 0 %>
                <% transaction.partial_payments.each do |pt| %>
                    <% @paid_amount += pt.amount_paid %>
                <% end %>
                <td><%= @paid_amount %></td>
                <td><%= transaction.transaction_time.strftime('%l:%M%P  %d-%b-%Y') %></td>
                <% @transaction_field_values = transaction.transaction_field_values %>
                <% unless @transaction_field_values.empty? %>
                    <% @transaction_field_values.each do |tf_value| %>
                        <td><%= tf_value.transaction_field_value %></td>
                    <% end %>
                <% else %>
                    <% @transaction_fields.each do |tf| %>
                        <td>-</td>
                    <% end %>
                <% end %>

                <td>
                    <%= link_to 'Edit', edit_transaction_path(transaction), :class => 'btn btn-mini' %>
                    <%= link_to 'Destroy', transaction_path(transaction), :method => :delete, :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-mini btn-danger' %>
                    <%= link_to 'Invoice', {:controller => "transactions", :action => "invoice", :id => transaction.id, :format => 'pdf'}, :class => 'btn btn-mini btn-mature' %>
                    <a href="#" data-target="#new-partial-payment" class="btn btn-mini btn-mature" data-toggle="modal" onclick="$('#partial-payment').modal()">Make payment</a>
                </td>
            </tr>
        <% end %>
    </tbody>
</table>
<div class="flickr_pagination">
    <div class="page_info">
        <%= page_entries_info @transactions %>
    </div>
    <%= will_paginate @transactions, :container => false %>
</div>
<%= render :partial => "transactions/new_partial_payment" %>
