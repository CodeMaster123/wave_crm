<div id="partial-payment" class="modal hide fade" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">Ã—</button>
        <h3 id="myModalLabel">Partial payment</h3>
    </div>
    <div class="modal-body">
        <%= form_tag '/create_partial_payment', :class => 'partial-payment-form form-horizontal' do |f| %>
            <div class="control-group">
                <label class = 'control-label'>Amount</label>
                <div class="controls">
                    <%= text_field_tag :amount,'', :class => 'text_field' %>
                </div>
            </div>
            <%= hidden_field_tag :transaction_id, current_user.id %>

        </div>
        <%#= hidden_field_tag :lead_id, @lead.id %>
        <div class="modal-footer">
            <button class="btn" data-dismiss="modal" aria-hidden="true">Close</button>
            <%= submit_tag nil, :class => 'btn btn-primary' %>
        </div>
    <% end %>
</div>
