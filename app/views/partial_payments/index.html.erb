<%- model_class = PartialPayment -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:amount_paid) %></th>
      <th><%= model_class.human_attribute_name(:transaction_id) %></th>
      <th><%= model_class.human_attribute_name(:created_at) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @partial_payments.each do |partial_payment| %>
      <tr>
        <td><%= link_to partial_payment.id, partial_payment_path(partial_payment) %></td>
        <td><%= partial_payment.amount_paid %></td>
        <td><%= partial_payment.transaction_id %></td>
        <td><%=l partial_payment.created_at %></td>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")), edit_partial_payment_path(partial_payment), :class => 'btn btn-mini' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")), partial_payment_path(partial_payment), :method => :delete, :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-mini btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")), new_partial_payment_path, :class => 'btn btn-primary' %>
