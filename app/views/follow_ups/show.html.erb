<%- model_class = FollowUp -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:lead_id) %>:</strong></dt>
  <dd><%= @follow_up.lead_id %></dd>
  <dt><strong><%= model_class.human_attribute_name(:description) %>:</strong></dt>
  <dd><%= @follow_up.description %></dd>
  <dt><strong><%= model_class.human_attribute_name(:follow_up_time) %>:</strong></dt>
  <dd><%= @follow_up.follow_up_time %></dd>
</dl>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              follow_ups_path, :class => 'btn'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_follow_up_path(@follow_up), :class => 'btn' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              follow_up_path(@follow_up),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>
