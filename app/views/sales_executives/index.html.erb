<%- model_class = SalesExecutive -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th>Sr.No</th>
      <th>Executive name</th>
      <th>Teamleader's name</th>
      <th>Mobile no</th>

      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
  <% render :partial => 'shared/i_calculation' %>
    <% @sales_executives.each do |sales_executive| %>
      <tr>
        <td><%=  @i = @i+1 %></td>
        <td><%= link_to "#{sales_executive.user.first_name} #{sales_executive.user.last_name}", {:controller => 'leads', :action => 'index', :id1 => sales_executive.id} %></td>
        <td><%= "#{sales_executive.team_leader.user.first_name} #{sales_executive.team_leader.user.last_name}" %></td>
        <td><%= sales_executive.user.mobile_no %></td>

        <td>

          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      sales_executive_path(sales_executive),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-mini btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

