<div id="new-meeting" class="modal hide fade" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">Ã—</button>
        <h3 id="myModalLabel">New Event</h3>
    </div>
    <div class="modal-body">
        <%= form_tag @event, :html => { :class => 'rvent-form form-horizontal' } do |f| %>
            <div class="control-group">
                <label class="control-label"> Title</label>
                <div class="controls">
                    <%= text_field_tag :title,'', :class => 'text_field' %>
                </div>
            </div>
            <div class="control-group">
                <label class="control-label"> Meeting time</label>
                <div class="controls">
                    <%= text_field_tag :starts_at,'', :class => 'datetime_select' %>
                </div>
            </div>
            <div class="control-group">
                <label class="control-label"> Description</label>
                <div class="controls">
                    <%= text_area_tag :description,'', :rows => "4", :class => 'text_area' %>
                </div>
            </div>
        <% end %>
    </div>

    <div class="modal-footer">
        <button class="btn" data-dismiss="modal" aria-hidden="true">Close</button>
        <button class="btn btn-primary">Save changes</button>
    </div>
</div>
