<div id="new-meeting" class="modal hide fade" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">Ã—</button>
        <h3 id="myModalLabel">New Event</h3>
    </div>
    <div class="modal-body">
        <%= form_tag '/create_events', :class => 'event-form form-horizontal' do |f| %>
            <div class="control-group">
                <label class="control-label"> Title</label>
                <div class="controls">
                    <%= text_field_tag :title,'', :class => 'text_field' %>
                </div>
            </div>
            <div class="control-group">
                <label class="control-label"> Meeting time</label>
                <div class="controls">
                    <%= text_field_tag :starts_at,'', :class => 'datetime_select' %>
                </div>
            </div>
            <div class="control-group">
                <label class="control-label"> Description</label>
                <div class="controls">
                    <%= text_area_tag :description,'', :rows => "4", :class => 'text_area' %>
                </div>
            </div>
        </div>
        <div class="modal-footer">
            <button class="btn" data-dismiss="modal" aria-hidden="true">Close</button>
            <%= submit_tag 'submit', :class => 'btn btn-primary' %>
        </div>
    <% end %>
</div>
