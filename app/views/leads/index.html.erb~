<%- model_class = Lead -%>
<div class="page-header">
    <% if @page_title.nil? %>
        <h1><%=t '.title', :default => model_class.model_name.human.pluralize %></h1>
    <% else %>
        <h1><%= @page_title %></h1>
    <% end %>
</div>
<table class="table table-striped">
    <thead>
        <tr>
            <th><%= model_class.human_attribute_name(:id) %></th>
            <th><%= model_class.human_attribute_name(:title) %></th>
            <th><%= model_class.human_attribute_name(:description) %></th>
            <th><%= model_class.human_attribute_name(:leadable_id) %></th>
            <th>Follow up time</th>
            <th><%=t '.actions', :default => t("helpers.actions") %></th>
        </tr>
    </thead>
    <tbody>
        <% @leads.each do |lead| %>
            <tr>
                <td><%= link_to lead.id, lead_path(lead) %></td>
                <td><%= lead.title %></td>
                <td><%= lead.description %></td>

                <td><%= lead.leadable_id %></td>
                <% unless lead.follow_ups.all(:order => 'follow_up_time').last.nil? %>
                    <td class="my-tooltip"><%= lead.follow_ups.all(:order => 'follow_up_time').last.follow_up_time.strftime('%l:%M%p %d-%h') %></td>
                <% else %>
                    <td class="my-tooltip">asdf</td>
                <% end %>
                <td>
                    <%= link_to t('.edit', :default => t("helpers.links.edit")),
                        edit_lead_path(lead), :class => 'btn btn-mini' %>
                        <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                            lead_path(lead),
                            :method => :delete,
                            :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                            :class => 'btn btn-mini btn-danger' %>
                            <%= link_to 'Add follow up', {:controller => 'follow_ups', :action => 'new', :id1 => lead.id}, :class => 'btn btn-mini' %>
                        </td>
                    </tr>
                <% end %>
            </tbody>
        </table>

        <%= link_to t('.new', :default => t("helpers.links.new")),
            new_lead_path,
            :class => 'btn btn-primary' %>


