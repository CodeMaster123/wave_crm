<div id="new-notification" class="modal hide fade" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">Ã—</button>
        <h3 id="myModalLabel">New Notification</h3>
    </div>
    <div class="modal-body">
        <%= form_tag '/create_notification', :class => 'notification-form form-horizontal' do |f| %>
            <div class="control-group">
                <label class="control-label"> Contact</label>
                <div class="controls">
                    <%= select_tag :contact_id, options_for_select(@contacts.map{|c|[c.full_name, c.id]}), :class => 'contacts_text_field' %>
                </div>
            </div>

            <div class="control-group">
                <label class="control-label"> Subject</label>
                <div class="controls">
                    <%= text_field_tag :subject ,'', :rows => "7",  :class => 'text_area' %>
                </div>
            </div>

            <div class="control-group">
                <label class="control-label"> Body</label>
                <div class="controls">
                    <%= text_area_tag :body,'', :rows => "7",  :class => 'text_area' %>
                </div>
            </div>

            <div class="control-group">
                <label class="control-label"> Notification time</label>
                <div class="controls">
                    <%= text_field_tag :notification_time,'', :class => 'datetime_select' %>
                </div>
            </div>

            <div class="control-group">
                <div class="controls">
                    Email: <%= check_box_tag :is_email %>
                    SMS: <%= check_box_tag :is_sms %>
                </div>
            </div>
        </div>

        <div class="modal-footer">
            <button class="btn" data-dismiss="modal" aria-hidden="true">Close</button>
            <%= submit_tag "Submit", :class => 'btn btn-primary' %>
        </div>
    <% end %>
</div>
