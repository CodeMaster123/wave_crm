<%= form_for @lead, :html => { :class => 'form-horizontal' } do |f| %>
  <div class="control-group">
    <%= f.label :title, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :title, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :description, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :description, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :contact_id, :class => 'control-label' %>
    <div class="controls">
      <%= f.number_field :contact_id, :class => 'number_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :executive_id, :class => 'control-label' %>
    <div class="controls">
      <%= f.number_field :executive_id, :class => 'number_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :lead_by, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :lead_by, :class => 'text_field' %>
    </div>
  </div>

  <div class="form-actions">
    <%= f.submit nil, :class => 'btn btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                leads_path, :class => 'btn' %>
  </div>
<% end %>
