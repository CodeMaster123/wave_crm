<%= bootstrap_form_for @inventory, :html => { :class => 'form-horizontal' } do |f| %>
    <%= f.text_field :product_id, :class => 'number_field' %>
    <%= f.text_field :quantity, :class => 'number_field' %>

    <div class="form-actions">
        <%= f.submit nil, :class => 'btn btn-primary' %>
        <%= link_to t('.cancel', :default => t("helpers.links.cancel")), inventories_path, :class => 'btn' %>
    </div>
<% end %>
