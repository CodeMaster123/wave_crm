<%= bootstrap_form_for @target, :html => { :class => 'form-horizontal' } do |f| %>

    <%= f.select :targetable_type, [["Team leader", "TeamLeader"], ["Sales executive", "SalesExecutive"]], {}, :class => 'user_type'  %>
    <div class=" hide team_leaders">
        <%= f.select :targetable_id , options_for_select(@team_leaders.map{|d| ["#{d.user.first_name} #{d.user.last_name}", d.id]}), { :include_blank => "Select Team Leader" }, :class => 'text_field' %>
    </div>
    <div class=" hide sales_executives">
        <%= f.select :targetable_id, options_for_select(@sales_executives.map{|d| ["#{d.user.first_name} #{d.user.last_name}", d.id]}), { :include_blank => "Select Sales Executive" }, :class => 'text_field' %>
    </div>
    <%= f.text_field :amount, :class => 'number_field' %>
    <%= f.text_field :achived, :class => 'number_field' %>
    <%= f.text_field :start_target_date, :class => 'datetime_select' %>
    <%= f.text_field :end_target_date, :class => 'datetime_select' %>


<div class="form-actions">
    <%= f.submit nil, :class => 'btn btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
        targets_path, :class => 'btn' %>
    </div>
<% end %>
