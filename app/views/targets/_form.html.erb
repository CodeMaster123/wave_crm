<%= bootstrap_form_for @target, :html => { :class => 'form-horizontal' } do |f| %>
    <div class="target" >
     <%= f.select :targetable_type, [["Select Executive", ""], ["Team leader", "TeamLeader"], ["Sales executive", "SalesExecutive"]], {}, :class => 'user_type'  %>

     <div class=" hide team_leaders">
           <%= f.select :targetable_id, options_for_select(@company.team_leaders.map{|d| ["#{d.user.first_name} #{d.user.last_name}", d.id]}), { :include_blank => "Select Team Leader" }, :class => 'text_field' %>
     </div>
     <div class=" hide sales_executives">
           <%= f.select :targetable_id, options_for_select(@company.sales_executives.map{|d| ["#{d.user.first_name} #{d.user.last_name}", d.id]}), { :include_blank => "Select Sales Executive" }, :class => 'text_field' %>
     </div>
    </div>



    <%= f.text_field :amount, :class => 'number_field' %>
    <%= f.text_field :achived, :class => 'number_field' %>
    <%= f.select :target_month, [["Select Target Month", 0], ["January", 1], ["February", 2], ["March", 3], ["April", 4], ["May", 5], ["June", 6], ["July", 7], ["August", 8], ["September", 9], ["October", 10], ["November", 11], ["December", 12]], { :selected => 0, :disabled => 0 }, :class => 'text_field' %>
    <%= f.select :target_year, [["Select Target Year", 0], [2013, 2013], [2014, 2014], [2015, 2015], [2016, 2016], [2017, 2017], [2018, 2018], [2019, 2019], [2020, 2020]], { :selected => 0, :disabled => 0 }, :class => 'text_field' %>


<div class="form-actions">
    <%= f.submit nil, :class => 'btn btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
        targets_path, :class => 'btn' %>
    </div>
<% end %>
