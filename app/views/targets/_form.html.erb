<%= form_for @target, :html => { :class => 'form-horizontal' } do |f| %>

    <div class="control-group">
      <%= f.label :user_id, :class => 'control-label' %>
      <div class="controls">
        <%= f.select :user_id, options_for_select(@company.sales_users.map{|user| ["#{user.first_name} #{user.last_name}", user.id]}), { :include_blank => "Select Any Executive" }, :class => 'text_field' %>
      </div>
    </div>

    <div class="control-group">
      <%= f.label :amount, :class => 'control-label' %>
      <div class="controls">
        <%= f.text_field :amount,  :class => 'number_field' %>
      </div>
    </div>

    <div class="control-group">
      <%= f.label :target_month, :class => 'control-label' %>
      <div class="controls">
        <%= f.select :target_month, [["Select Target Month", 0], ["January", 1], ["February", 2], ["March", 3], ["April", 4], ["May", 5], ["June", 6], ["July", 7], ["August", 8], ["September", 9], ["October", 10], ["November", 11], ["December", 12]], { :selected => 0, :disabled => 0 }, :class => 'text_field' %>
      </div>
    </div>

    <div class="control-group">
      <%= f.label :target_year, :class => 'control-label' %>
      <div class="controls">
        <%= f.select :target_year, [["Select Target Year", 0], [2013, 2013], [2014, 2014], [2015, 2015], [2016, 2016], [2017, 2017], [2018, 2018], [2019, 2019], [2020, 2020]], { :selected => 0, :disabled => 0 }, :class => 'text_field' %>
      </div>
    </div>

<div class="form-actions">
    <%= f.submit nil, :class => 'btn btn-primary' %>
    <%= link_to 'Cancel', targets_path, :class => 'btn' %>
    </div>
<% end %>
