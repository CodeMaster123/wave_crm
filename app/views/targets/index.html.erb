<%- model_class = Target -%>
<div class="page-header">
  <h1>Individual Targets</h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th>Executive name</th>
      <th>Executive type</th>
      <th>Amount</th>
      <th>Achived</th>
      <th>Actions </th>
  </tr>
  </thead>
  <tbody>
      <% @targets.each do |target| %>
          <tr>

                  <td><%= link_to target.id, target_path(target) %></td>
                  <td><%= target.targetable_id %></td>
                  <td><%= target.targetable_type %></td>
                  <td><%= target.amount %></td>
                  <td><%= target.achived %></td>
                  <td>
                      <%= link_to t('.edit', :default => t("helpers.links.edit")),
                          edit_target_path(target), :class => 'btn btn-mini' %>
                          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                              target_path(target),
                              :method => :delete,
                              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                              :class => 'btn btn-mini btn-danger' %>
                          </td>
                      <% end %>
                  </tr>

          </tbody>
      </table>

      <%= link_to t('.new', :default => t("helpers.links.new")),
          new_target_path,
          :class => 'btn btn-primary' %>
