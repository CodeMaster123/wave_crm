<%- model_class = Target -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:targetable_id) %>:</strong></dt>
  <dd><%= @target.targetable_id %></dd>
  <dt><strong><%= model_class.human_attribute_name(:targetable_type) %>:</strong></dt>
  <dd><%= @target.targetable_type %></dd>
  <dt><strong><%= model_class.human_attribute_name(:amount) %>:</strong></dt>
  <dd><%= @target.amount %></dd>
  <dt><strong><%= model_class.human_attribute_name(:achived) %>:</strong></dt>
  <dd><%= @target.achived %></dd>
  <dt>Target Month</dt>
  <dd><%= @target.target_month%></dd>
  <dt>Target Year</dt>
  <dd><%= @target.target_year %></dd>
</dl>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              targets_path, :class => 'btn'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_target_path(@target), :class => 'btn' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              target_path(@target),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>
