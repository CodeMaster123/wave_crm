<%= form_for @notification, :html => { :class => 'form-horizontal' } do |f| %>
  <div class="control-group">
    <%= f.label :sms_sent, :class => 'control-label' %>
    <div class="controls">
      <%= f.check_box :sms_sent, :class => 'check_box' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :contact_id, :class => 'control-label' %>
    <div class="controls">
      <%= f.number_field :contact_id, :class => 'number_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :body, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :body, :class => 'text_field' %>
    </div>
  </div>

  <div class="form-actions">
    <%= f.submit nil, :class => 'btn btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                notifications_path, :class => 'btn' %>
  </div>
<% end %>
