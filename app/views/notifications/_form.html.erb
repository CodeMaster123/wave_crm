<%= form_for @notification, :html => { :class => 'form-horizontal' } do |f| %>
  <div class="control-group">
    <%= f.label :contact_id, :class => 'control-label' %>
    <div class="controls">
        <%= f.select :contact_id, options_for_select(@contacts.map{|c|[c.full_name, c.id]}), :class => 'contacts_text_field' %>
    </div>
  </div>
    <div class="control-group">
      <%= f.label :subject, :class => 'control-label' %>
      <div class="controls">
        <%= f.text_field :subject,  :class => 'text_field' %>
      </div>
    </div>
  <div class="control-group">
    <%= f.label :body, :class => 'control-label' %>
    <div class="controls">
        <%= f.text_area :body, :rows => "7",  :class => 'text_area' %>
    </div>
  </div>

  <div class="control-group">
      <%= f.label :Notification_time, :class => 'control-label' %>
      <div class="controls">
          <%= f.text_field :notification_time, :class => 'datetime_select' %>
      </div>
  </div>

  <div class="control-group">
      <%= f.label :next_notification, :class => 'control-label' %>
      <div class="controls">
          <%= select_tag :next_notification, options_for_select([["Select One", ""], ["after 1 month", 1], ["after 2 month", 2], ["after 3 month", 3], ["after 4 month", 4], ["after 5 month", 5], ["after 6 month", 6], ["after 7 month", 7], ["after 8 month", 8], ["after 9 month", 9], ["after 10 month", 10], ["after 11 month", 11], ["after 12 month", 12]]), :class => 'datetime_select' %>
      </div>
  </div>


  <div class="control-group">
      <%= f.label :email, :class => 'control-label' %>
      <div class="controls">
          <%= f.check_box :is_email %>
      </div>
  </div>
  <div class="control-group">
      <%= f.label :sms, :class => 'control-label' %>
      <div class="controls">
          <%= f.check_box :is_sms %>
      </div>
  </div>

  <div class="form-actions">
      <%= f.submit nil, :class => 'btn btn-primary' %>
      <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
          notifications_path, :class => 'btn' %>
      </div>
  <% end %>
