<%- model_class = Notification -%>
<div class="page-header">
    <h1>Notifications to all</h1>
</div>

<%= form_tag "/notifications_to_all",:method => "POST", :class => 'form-horizontal' do %>
    <div class="control-group">
    <label class="control-label">Body</label>
        <div class="controls">
            <%= text_area_tag :body,'', :rows => "7",  :html =>{:class => 'text_area'} %>
        </div>
    </div>

    <div class="control-group">
        <%= label_tag :Notification_time,'Notification time', :class => 'control-label' %>
        <div class="controls">
            <%= text_field_tag :notification_time,'', :class => 'datetime_select' %>
        </div>
    </div>

    <div class="form-actions">
        <%= submit_tag "Create", :class => 'btn btn-primary' %>
    </div>
<% end %>
